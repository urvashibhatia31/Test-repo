# Use a base image of your choice (e.g., Ubuntu, Debian, etc.)
FROM ubuntu:20.04

# Install curl and wget
RUN apt-get update && apt-get install -y curl wget

# Copy the installation script into the image
COPY install_tools.sh /tmp/install_tools.sh

# Make the script executable and run it
RUN chmod +x /tmp/install_tools.sh && /tmp/install_tools.sh

# Clean up unnecessary files or packages
RUN apt-get clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Set your preferred entry point or command
CMD ["/bin/bash"]
